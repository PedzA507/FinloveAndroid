            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/buttonOption12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ออกกำลังกาย"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/buttonOption13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ตกปลา"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/buttonOption14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รักสัตว์"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/buttonOption15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ของหวาน"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/buttonOption16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ถ่ายรูป"
            android:layout_marginTop="15dp"
            android:layout_margin="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/text_selector" />

    </GridLayout>

    <ImageButton
        android:id="@+id/buttonsave"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/cyclebutton"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>
